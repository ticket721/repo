{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2017",
        "sourceMap": true,
        "esModuleInterop": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "incremental": true,
        "resolveJsonModule": true,
        "types": ["jest", "node", "@nestjs/swagger"],
        "paths": {
            "@lib/common/": [
                "libs/common/src"
            ],
            "@lib/common/*": [
                "libs/common/src/*"
            ],
            "@app/server/": [
                "apps/server/src"
            ],
            "@app/server/*": [
                "apps/server/src/*"
            ],
            "@app/worker/": [
                "apps/worker/src"
            ],
            "@app/worker/*": [
                "apps/worker/src/*"
            ],
            "@email-templates/": [
                "../@backend_email-templates"
            ],
            "@email-templates/*": [
                "../@backend_email-templates/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}
