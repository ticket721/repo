{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2017",
        "sourceMap": true,
        "esModuleInterop": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "incremental": true,
        "resolveJsonModule": true,
        "paths": {
            "@lib/common/": [
                "libs/common/src"
            ],
            "@lib/common/*": [
                "libs/common/src/*"
            ],
            "@app/server/": [
                "apps/server/src"
            ],
            "@app/server/*": [
                "apps/server/src/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}
