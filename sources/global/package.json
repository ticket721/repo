{
    "name": "@ticket721sources/global_utility",
    "version": "1.0.0",
    "description": "",
    "author": "",
    "license": "MIT",
    "scripts": {
        "test": "ts-mocha **/*.spec.ts",
        "test:cov": "nyc npm run test"
    },
    "dependencies": {
        "chai": "^4.2.0",
        "chai-as-promised": "^7.1.1",
        "mocha": "^6.2.2"
    },
    "devDependencies": {
        "nyc": "^14.1.1",
        "@istanbuljs/nyc-config-typescript": "^0.1.3",
        "@types/chai": "^4.2.7",
        "@types/mocha": "^5.2.7",
        "ts-mocha": "^6.0.0"
    },
    "nyc": {
        "extends": "@istanbuljs/nyc-config-typescript",
        "all": true,
        "reporter": [
            "text",
            "lcov"
        ],
        "include": [
            "**/*.ts"
        ],
        "exclude": [
            "**/*.spec.ts",
            "log/*.ts",
            "index.ts"
        ]
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": ".",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
