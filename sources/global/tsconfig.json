{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "declarationMap": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2017",
        "sourceMap": true,
        "outDir": "./lib",
        "baseUrl": "./sources",
        "incremental": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "paths": {
            "@lib/common/": [
                "../../server/libs/common/src"
            ],
            "@lib/common/*": [
                "../../server/libs/common/src/*"
            ],
            "@app/server/": [
                "../../server/apps/server/src"
            ],
            "@app/server/*": [
                "../../server/apps/server/src/*"
            ],
            "@app/antenna/": [
                "../../server/apps/antenna/src"
            ],
            "@app/antenna/*": [
                "../../server/apps/antenna/src/*"
            ]
        }
    },
    "exclude": ["node_modules", "lib", "**/*.spec.ts"]
}
