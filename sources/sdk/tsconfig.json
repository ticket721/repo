{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "declarationMap": true,
        "removeComments": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2017",
        "sourceMap": true,
        "outDir": "./lib",
        "baseUrl": "./sources",
        "incremental": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "paths": {
            "@lib/common/": [
                "../../server/libs/common/src"
            ],
            "@lib/common/*": [
                "../../server/libs/common/src/*"
            ],
            "@app/server/": [
                "../../server/apps/server/src"
            ],
            "@app/server/*": [
                "../../server/apps/server/src/*"
            ],
            "@app/worker/": [
                "../../server/apps/worker/src"
            ],
            "@app/worker/*": [
                "../../server/apps/worker/src/*"
            ]
        }
    },
    "exclude": ["node_modules", "lib"]
}
